/*
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Nextflow config file for running minimal tests
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Defines input files and everything required to run a fast and simple pipeline test.

    Use as follows:
        nextflow run shahcompbio/wakcna -profile test,<docker/singularity> --outdir <OUTDIR>

----------------------------------------------------------------------------------------
*/

process {
    resourceLimits = [
        cpus: 4,
        memory: '15.GB',
        time: '1.h',
    ]

    withName: WAKHAN_HAPCORRECT {
        ext.args = '--contigs chr22'
    }

    withName: WAKHAN_CNA {
        ext.args = '--contigs chr22'
    }
}

params {
    config_profile_name        = 'Test profile'
    config_profile_description = 'Minimal test dataset to check pipeline function'

    // Input data
    // TODO nf-core: Specify the paths to your test data on nf-core/test-datasets
    // TODO nf-core: Give any required params for the test so that command line flags are not needed
    input                      = params.pipelines_testdata_base_path + 'wakcna/samplesheet_colo829.csv'
    // Genome references
    fasta                      = params.pipelines_testdata_base_path + 'wakcna/reference/GRCh38_chr22.fa'
    fai                        = params.pipelines_testdata_base_path + 'wakcna/reference/GRCh38_chr22.fa.fai'
    vntr_bed                   = params.pipelines_testdata_base_path + 'wakcna/reference/human_GRCh38_no_alt_analysis_set.trf.bed'
}
