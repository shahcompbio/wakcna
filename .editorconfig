root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_size = 4
indent_style = space

[*.{md,yml,yaml,html,css,scss,js}]
indent_size = 2

# These files are edited and tested upstream in nf-core/modules
[/modules/nf-core/**]
charset = unset
end_of_line = unset
insert_final_newline = unset
trim_trailing_whitespace = unset
indent_style = unset
[/subworkflows/nf-core/**]
charset = unset
end_of_line = unset
insert_final_newline = unset
trim_trailing_whitespace = unset
indent_style = unset

[/assets/email*]
indent_size = unset

# ignore python and markdown
[*.{py,md,R}]
indent_style = unset

# ignore devcontainer files
[.devcontainer/**]
insert_final_newline = unset
# ignore docker files
[**/Dockerfile]
insert_final_newline = unset

# ignore ro-crate metadata files
[**/ro-crate-metadata.json]
insert_final_newline = unset

# ignore csv files
[*.csv]
end_of_line = unset
insert_final_newline = unset
# ignore tests subdirectories for now
[**/tests/**]
charset = unset
end_of_line = unset
insert_final_newline = unset
trim_trailing_whitespace = unset
indent_style = unset
